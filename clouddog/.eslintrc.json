{
  "extends": ["next/core-web-vitals", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-debugger": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-extra-semi": "error",
    "no-multi-spaces": "error"
  }
}
